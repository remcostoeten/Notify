{
  "name": "notifier-monorepo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "./scripts/prebuild-mention.sh && next build",
    "build:packages": "bun --filter './packages/*' run build",
    "dev": "./scripts/prebuild-mention.sh && next dev --turbo",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "start": "next start",
  "test": "./scripts/prebuild-mention.sh && bun --filter './packages/*' run test"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@vercel/analytics": "^1.6.1",
    "framer-motion": "12.26.2",
    "lucide-react": "^0.454.0",
    "next": "15.5.9",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^16.0.0",
    "postcss": "^8.5",
    "prettier": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5"
  },
  "packageManager": "bun@1.2.0"
}
