{
  "name": "@remcostoeten/notifier",
  "version": "1.0.0",
  "description": "Lightweight chainable notification system for React with smooth animations, confirmations, and promise tracking",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles/spinner.css"
  },
  "files": ["dist", "README.md", "LICENSE"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "bun run test && bun run build"
  },
  "keywords": [
    "react",
    "notification",
    "toast",
    "alert",
    "notifier",
    "sonner",
    "chainable",
    "promise",
    "confirm",
    "typescript",
    "framer-motion",
    "animation"
  ],
  "author": "Remco Stoeten",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/remcostoeten/notifier"
  },
  "bugs": {
    "url": "https://github.com/remcostoeten/notifier/issues"
  },
  "homepage": "https://github.com/remcostoeten/notifier#readme",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "framer-motion": ">=11.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "framer-motion": "^12.0.0",
    "jsdom": "^25.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  }
}
